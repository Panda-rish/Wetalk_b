<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Signup</title>
  <style>
    body {
      display:block;
      justify-content: center; /* Center content horizontally */
      align-items: center; /* Center content vertically */
      min-height: 100vh;
      margin:0;
      background-color: #25d9c7; /* Set background color */
    }

    .navbar-container {
      margin-bottom: 20px; /* Add margin below navbar */
    }

    .body-container {
      display:flex;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      justify-content: center; /* Center content horizontally */
      align-items: center; /* Center content vertically */
      background-color: rgb(203, 223, 15); /* Set background color of body container */
      padding: 20px; /* Add padding */
      border-radius: 10px; /* Add border radius for rounded corners */
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Add shadow effect */
      max-width: 400px; /* Set maximum width for the body container */
      width: 100%; /* Make the body container responsive */
    }

    .form-group {
      margin-bottom: 1rem; /* Add margin bottom between form elements */
    }

    .form-control {
      width: 100%; /* Make form controls fill the width of the container */
    }

   
    
 
  </style>
</head>
<body>

<div class="navbar-container">
  <%- include('./partials/nav') %>
  <%- include('./partials/icon') %>
</div>




<div class="body-container align-items-center mx-auto ">
  <form action="/user/signup" method="post">
    <div class="form-group">
      <h1><span class="fa fa-sign-in"></span> signup</h1>
      <label for="fullName" class="form-label">Full Name</label>
      <input
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        aria-describedby="fullName"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input
        type="email"
        name="email"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
      />
      <div id="emailHelp" class="form-text">
        We'll never share your email with anyone else.
      </div>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input
        name="password"
        type="password"
        class="form-control"
        id="exampleInputPassword1"
      />
    </div>
    <div class="">
    <button type="submit"  class="btn btn-primary mb-6 " >Submit</button>

   </div>
  </form>
</div>


<%- include('./partials/scripts') %>

</body>
</html>
