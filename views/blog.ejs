<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1 class="text-center" style="font-weight: bold; text-decoration: underline;"><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="600" height="auto" alt="Bold and Underlined Image Centered Image" 
      style="border: 2px solid black; border-bottom: none; object-fit: cover;" class="mx-auto d-block"/>
      <pre class="mt-7; responsive-text; text-wrap;"><p><%= blog.body %></p></pre>
    </div>

    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" /> <%=
      blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
          />
          <button class="btn btn-sm btn-primary" type="submit">Add</button>
        </div>
      </form>

      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div>
          <img src="<%= comment.createdBy.profileImageURL %>" width="40px" />
          <%= comment.createdBy.fullName %>
          <pre style="font-size: 25px; color: lightcoral;"><%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
    <%- include('./partials/footer') %>
  </body>
</html>
