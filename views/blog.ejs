<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Blog</title>
  <style>
    .blog-container {
      max-width: 1200px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      overflow-x: hidden;
    }

    .blog-title {
      font-weight: bold;
      text-decoration: underline;
      text-align: center;
    }

    .blog-image {
      width: 100%;
      max-width: 600px;
      height: auto;
      border: 2px solid black;
      border-bottom: none;
      object-fit: cover;
      display: block;
      margin: 0 auto;
    }

    .blog-body {
      margin-top: 20px;
    }

    .author {
      display: flex;
      align-items: center;
      margin-top: 20px;
    }

    .author img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .comments-section {
      margin-top: 50px;
    }

    .comments-section h1 {
      font-size: 24px;
    }

    .comment-form {
      display: flex;
      align-items: center;
    }

    .comment-form input {
      flex-grow: 2;
      margin-right: 10px;
    }

    .comment-form button {
      padding: 5px 10px;
    }

    .comment {
      display: flex;
      flex:auto
      align-items: center;
      margin-top: 20px;
    }

    .comment img {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .comment-content {
      font-size: 18px;
      color: lightcoral;
    }

    @media (max-width: 768px) {
      .blog-title {
        font-size: 24px;
      }

      .blog-body {
        font-size: 16px;
      }

      .comments-section h1 {
        font-size: 20px;
      }

      .comment-content {
        font-size: 16px;
      }

      .comment-form input {
        width: 70%;
      }

      .comment-form button {
        width: 30%;
        padding: 5px;
      }
    }

    @media (max-width: 480px) {
      .blog-title {
        font-size: 20px;
      }

      .blog-body {
        font-size: 14px;
      }

      .comments-section h1 {
        font-size: 18px;
      }

      .comment-content {
        font-size: 14px;
      }

      .comment-form input {
        width: 60%;
      }

      .comment-form button {
        width: 40%;
        padding: 5px;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="blog-container">
    <h1 class="blog-title"><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" alt="Blog Cover Image" class="blog-image" />
    <p class="blog-body"><%= blog.body %></p>
    <div class="author">
      <h3>Posted By:- </h3> &nbsp
      <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image" />
      <%= blog.createdBy.fullName %>
    </div>
  </div>

  <div class="comments-section">
   
    <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-form">
      <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
      <button class="btn btn-sm btn-primary" type="submit">Add</button>
    </form>
    <% } %>

    <div class="mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% comments.forEach(comment => { %>
      <div class="comment">
        <img src="<%= comment.createdBy.profileImageURL %>" alt="Comment Author Image" />
       <b><u><%= comment.createdBy.fullName %></u></b> 
        <pre class="comment-content">  &nbsp<%= comment.content %></pre>
      </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/scripts') %>
  <%- include('./partials/footer') %>
</body>
</html>
