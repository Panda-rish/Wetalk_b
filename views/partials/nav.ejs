          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/user/about">About us</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/user/contact">Contact</a>
        </li>
        
        
      </ul>
      <ul class="navbar-nav ml-auto"> <!-- Align user section to the right -->
        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/blog/add-new">AddBlog</a>
          </li>
          
