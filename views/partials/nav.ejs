<style>
  button{
        width: 100%;
        padding: 10px 10px;
        border-radius: 20px;
        margin-top: 10px;
        margin:auto;
        border: none;
        outline: none;
        box-shadow: 0 0 5px rgb(220, 219, 234);
        font-size: 16px;
        font-weight: 600;
        box-shadow: 0 0 10px rgb(0,0,0);
        background-color: rgb(88, 190, 227);
       
      }
      buttom:hover{
        background-color:rgb(219, 255, 111) ;
        color: rgba(225, 90, 11, 0.288);
      }
      h3 {
      
      text-decoration: underline;
    }
    @media  screen and(max-width:900px) {
        .buttom{
          width: 40%;
        }
      @media  screen and(max-width:700px) {
        .buttom{
          width: 60%;
        }
      @media  screen and(max-width:450px) {
        .buttom{
          width: 80%;
        }
</style>

